{
  "$schema": "http://json-schema.org/draft-07/schema",
  "тип": "массив",
  "по умолчанию": [],
  "элементы": {
    "тип": "объект",
    "additionalProperties": false,
    "требуется": [
      "id",
      "имя",
      "число",
      "баланс",
      "валюта"
    ],
    "свойства": {
      "id": {
        "тип": "целоечисло"
      },
      "имя": {
        "тип": "строка",
        "minLength": 1
      },
      "номер": {
        "тип": "строка",
        "pattern": "^•• \\d{4}$"
      },
      "баланс": {
        "тип": "целоечисло",
        "по умолчанию": 0
      },
      "валюта": {
        "тип": "строка",
        "pattern": "^(RUB)|(USD)$"
      }
    }
  }
}